<h1>Edit animal</h1>

<% if @animal.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @animal.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/animals/<%= @animal.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="animal_species">Species</label>
  <input id="animal_species" name="animal[species]" type="text" value="<%= @animal.species %>">
  <label for="animal_place">Place</label>
  <input id="animal_place" name="animal[place]" type="text" value="<%= @animal.place %>">
  <label for="animal_date">Date</label>
  <input id="animal_date" name="animal[date]" type="text" value="<%= @animal.date %>">
  <button>Update Animal</button>
</form>
